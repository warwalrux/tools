query { 
  files: search(first:100, type:REPOSITORY, query: "org:apache") {
    edges {
      node {
        ... on Repository {
          object(expression: "HEAD:config.toml") {
            repository {
              name
            }
          }
        }
      }
      cursor
    }
    pageInfo {
      endCursor
      hasNextPage
    }
  }
}
