#!/bin/bash
colors=$(seq 30 37)
light_colors=$(seq 90 97)
styles=$(seq 0 7)

echo "--- Regular Colors ---"
echo "$(for color in $colors; do
    for style in $styles; do
        string="\e[${style};${color}mstyle: $style, color: $color \e[0m"
        echo -e $string
    done
done)" | column

echo "--- Light Colors ---"
echo "$(for color in $light_colors; do
    for style in $styles; do
        string="\e[${style};${color}mstyle: $style, color: $color \e[0m"
        echo -e $string
    done
done)" | column
